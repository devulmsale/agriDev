# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                                 Application.index
GET     /weixin/products                                  weixin.Application.products
POST    /weixin/confirm                                   weixin.Application.confirm
POST    /weixin/detail                                    weixin.Application.detail
POST    /weixin/pay                                       weixin.Application.pay
GET     /weixin/{linkId}                                  weixin.Application.index


# Ignore favicon requests
GET     /favicon.ico                                      404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                          staticDir:public


# Merchant 商户后台管理
GET   /merchants                                          merchant.Application.index
GET   /merchants/login                                    merchant.auth.MerchantSecure.login

